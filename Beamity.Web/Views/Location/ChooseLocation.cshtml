                    timerInterval = setInterval(() => {
                        Swal.getContent().querySelector('strong')
                            .textContent = Swal.getTimerLeft()
                    }, 100)
                },
                onClose: () => {

                }
            });
        }
        $("#logout").click(function () {
            swalload();
            var options = {};
            options.url = "/User/Logout";
            options.type = "POST";
            options.success = function () {
                window.location.href = "/User/Login";
            }
            $.ajax(options);
        });

    </script>

</body>

</html>


